<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <section class="col-12">
                <div class="row">
                    <article class="col-12">
                        <h2><%= movie.title %></h2>
                    </article>
                    <article class="col-12">
                        <ul>
                            <li>Durancion: <%= movie.length %></li>
                            <li>Estreno: <%= movie.release_date %></li>
                            <li>Premios: <%= movie.awards %> </li>
                            <li>Rating: <%= movie.rating %></li>
                            <% if(movie.generos != null) { %>
                            <li>Genero: <a href="/movies/genre/<%=movie.generos.id%>"> <%= movie.generos.name %> </a> </li>
                            <% } %>
                            <li>Actores: <ul>
                                <% movie.Actors.forEach(function(movie){ %>
                                    <li> <a href="/movies/actors/<%=movie.id%>"> <%=movie.first_name + " " + movie.last_name%> </a> </li>
                               <% }) %>
                            </ul> </li> 
                        </ul>
                    </article>
                    <article class="col-1">
                        <form action="/movies/delete/<%=movie.id%>" method="POST">
                            <button type="submit">ELIMINAR</button>
                        </form>
                    </article>
                    <article class="col-1">
                        <button><a href="/movies/edit/<%= movie.id %>">EDITAR</a></button>
                    </article>
                </div>
            </section>

        </div>

    </div>
    
</body>
</html>